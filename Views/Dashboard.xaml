<UserControl x:Class="DigitalWellBeingApp.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1440">

    <Grid Background="Transparent" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dashboard Overview"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="10,0,0,20"
                   Grid.Row="0"
                   HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10">

            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock x:Name="TotalUsageText"
                               Text="Total App Usage: 0 sec"
                               FontSize="16"
                               Foreground="White"/>
                    <TextBlock x:Name="TotalSessionsText"
                               Text="Total Sessions: 0"
                               FontSize="16"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    
                    <TextBlock x:Name="TotalSleepText"
                               Text="Total Sleep: 0 sec"
                               FontSize="16"
                               Foreground="White"/>
                    <TextBlock x:Name="SleepSessionsText"
                               Text="Total Sleep Sessions: 0"
                               FontSize="16"
                               Foreground="White"/>
                    
                </StackPanel>
            </Border>
            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock x:Name="PomodoroCompletionText"
                               Text="Pomodoros Completed: 0"
                               FontSize="16"
                               Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
