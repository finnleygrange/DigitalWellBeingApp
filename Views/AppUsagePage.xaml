<UserControl x:Class="DigitalWellBeingApp.Views.AppUsagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1440">

    <Grid Background="Transparent" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="App Usage Overview"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="10,0,0,20"
                   Grid.Row="0"
                   HorizontalAlignment="Center" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20">
                <ListView x:Name="AppUsageListView"
                          Background="#2D2D40"
                          Foreground="White"
                          BorderThickness="0"
                          HorizontalContentAlignment="Stretch"
                          Width="400"
                          HorizontalAlignment="Center"
                          Margin="0,10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding AppName}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding TimeSpent, StringFormat={}{0} sec}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Grid.Column="1"
                                           Margin="20,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock x:Name="TotalUsageText"
                               Text="Total Usage: 0 sec"
                               FontSize="16"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock x:Name="AverageDailyUsageText"
                               Text="Average Daily Usage: 0 sec"
                               FontSize="16"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <Border Background="#2A2A40" CornerRadius="8" Padding="20" Margin="0,10" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock x:Name="TotalSessionsText"
                               Text="Total Sessions: 0"
                               FontSize="16"
                               Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>