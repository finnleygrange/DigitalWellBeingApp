<UserControl x:Class="DigitalWellBeingApp.Controls.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalWellBeingApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <Grid>
        <Border Grid.RowSpan="3" Background="#2A2A40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Image Source="C:\Users\Finnl\Desktop\DigitalWellBeingApp\Resources\Images\Icon.png" Width="50" Grid.Row="0"></Image>
                <StackPanel Grid.Row="1" Orientation="Vertical" Width="150">
                    <Button Content="Dashboard" Name="btnDashboard" Style="{StaticResource NavButton}" Click="btnDashboard_Click" />
                    <Button Content="Pomodoro" Name="btnPomodoro" Style="{StaticResource NavButton}" Click="btnPomodoro_Click" />
                    <Button Content="Reports" Name="btnReports" Style="{StaticResource NavButton}" Click="btnReports_Click" />
                    <Button Content="Settings" Name="btnSettings" Style="{StaticResource NavButton}" Click="btnSettings_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
