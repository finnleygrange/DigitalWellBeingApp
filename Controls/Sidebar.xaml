<UserControl x:Class="DigitalWellBeingApp.Controls.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalWellBeingApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="10, 0, 0, 10" Grid.RowSpan="3" Background="#2A2A40">
            <Grid>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="150">
                    <TextBlock Text="MyApp"
               FontSize="20"
               Margin="20"
               FontWeight="Bold"
               FontFamily="Quicksand" 
               HorizontalAlignment="Center" 
               Foreground="#F8FAFC" />
                    <Button Content="Dashboard" Name="btnDashboard" Style="{StaticResource NavButton}" Click="btnDashboard_Click" />
                    <Button Content="Pomodoro" Name="btnPomodoro" Style="{StaticResource NavButton}" Click="btnPomodoro_Click" />
                    <Button Content="Reports" Name="btnReports" Style="{StaticResource NavButton}" Click="btnReports_Click" />
                    <Button Content="Settings" Name="btnSettings" Style="{StaticResource NavButton}" Click="btnSettings_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
